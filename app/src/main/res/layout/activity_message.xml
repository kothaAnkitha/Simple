<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.snehareddy.simple.Message">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/e_contact"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:hint="CONTACT" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/e_message"
        android:layout_marginTop="50dp"
        android:hint="MESSAGE"
        android:layout_below="@+id/e_contact"
        android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/e_message"
       android:id="@+id/tview1"
       android:layout_marginTop="50dp"
       android:paddingRight="50dp"
       android:paddingLeft="40dp"
       android:textSize="40dp"
       />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bdate"
        android:text="pickdate"
        android:layout_below="@+id/tview1"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/bsend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
      android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:id="@+id/btime"
          android:layout_alignTop="@+id/bdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="picktime"
        android:layout_toRightOf="@+id/bsend"
        android:layout_toEndOf="@+id/bsend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   "
        android:id="@+id/tview2"
        android:layout_alignTop="@+id/tview1"
        android:textSize="40dp"
        android:layout_alignRight="@+id/e_message"
        android:layout_alignEnd="@+id/e_message"
        android:layout_alignBottom="@+id/tview1"
        android:layout_alignLeft="@+id/btime"
        android:layout_alignStart="@+id/btime" />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"

     android:text="send"
     android:id="@+id/bsend"
     android:layout_below="@+id/bdate"
     android:layout_centerHorizontal="true"
     android:layout_alignParentEnd="false" />

</RelativeLayout>
